<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="13sp"
        android:padding="10dp"
        android:text="请选择所需要编辑保存的区段"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/video_editor_trim_indicator_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/video_editor_trim_indicator_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jaygoo.widget.RangeSeekBar
        android:id="@+id/video_editor_trim_range_seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rsb_mode="range"
        app:rsb_indicator_background_color="#00000000"
        app:rsb_indicator_padding_left="7dp"
        app:rsb_indicator_padding_top="7dp"
        app:rsb_indicator_padding_bottom="-20dp"
        app:rsb_indicator_arrow_size="0dp"
        app:rsb_indicator_show_mode="alwaysHide"
        app:rsb_progress_height="10dp"
        app:rsb_min_interval="@integer/rangeSeekBarMinInterval"
        app:rsb_progress_color="@color/color_videoEditor_progress_bar"
        app:rsb_thumb_drawable="@drawable/range_bar_thumb_transparent"/>

    <Button
        android:id="@+id/video_editor_trim_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:paddingEnd="10dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:layout_marginBottom="10dp"
        android:drawableEnd="@drawable/ic_check"
        android:drawableTint="@color/greenyellow"
        android:text="完成修改" />

</androidx.appcompat.widget.LinearLayoutCompat>