<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoPlayerActivity">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exo_player"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/black"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/video_player_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack_50"
            app:navigationIcon="@drawable/ic_back_white" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/exo_player">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_videoPlayer_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="10dp"
                            android:text="2020年11月3日 11:20"
                            android:textSize="13sp"
                            android:theme="@style/TextView.Time" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textView_videoPlayer_folderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextView.TitleText"
                            android:textStyle="normal"
                            android:textSize="13sp"
                            android:padding="10dp"
                            android:text="李大果"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.yiqisport.yiqiapp.util.videoeditor.DisableScrollViewPager
                            android:id="@+id/video_player_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>