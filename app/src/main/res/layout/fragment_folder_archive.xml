<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    android:background="@color/colorPrimary">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/collapsing_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageview_placeholder"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:background="@color/colorPrimary"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9"
                />

            <FrameLayout
                android:id="@+id/user_info_holder_frame"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/burlywood_70"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/user_info_holder_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/info_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Toolbar.TitleText"
                        tools:text="张三丰"
                        android:textSize="24sp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/info_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="备注备注备注备注备注 \n备注备注备注备注备注备注\n 备注 "
                        android:textColor="@color/colorBlack_50"
                        android:fontFamily="@font/roboto_bold"
                        android:lines="1"
                        android:textSize="15sp"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </FrameLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/test_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/folder_archive_search_hint"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentEnd="true"
            android:elevation="5dp"
            android:layout_marginRight="15dp"
            android:text="测试搜索"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:background="@drawable/background_rounded_boarder_transparent"
            android:visibility="gone"
            />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/folder_archive_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/folder_archive_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_end_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="80dp"
                    android:text="日志库数量:"
                    android:textSize="15sp"
                    android:gravity="center" />

            </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_anchor="@id/user_info_holder_frame"
        app:layout_anchorGravity="top"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="100dp"
        app:contentInsetStartWithNavigation="0dp"
        app:title="">

        <EditText
            android:id="@+id/folder_archive_search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:imeOptions="actionDone"
            android:focusableInTouchMode="true"
            android:hint="请输入检索"
            android:drawableLeft="@drawable/ic_search_burlywood_24dp"
            android:drawablePadding="3dp"
            android:padding="8dp"
            android:maxLength="20"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="12sp"
            android:visibility="gone"
            android:singleLine="true"
            />

    </androidx.appcompat.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/profile_default"
        app:layout_anchor="@id/toolbar"
        app:layout_anchorGravity="start"
        />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="bottom|end"
        app:fab_addButtonColorNormal="@color/color_videoEditor_fab"
        app:fab_addButtonColorPressed="@color/color_videoEditor_fab_pressed"
        app:fab_addButtonPlusIconColor="@color/colorPrimaryDark"
        app:fab_labelStyle="@style/Fab_VideoList">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/gallery_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/color_videoEditor_fab_button"
            app:fab_colorPressed="@color/color_videoEditor_fab_button_pressed"
            app:fab_icon="@drawable/ic_gallery"
            app:fab_size="mini"
            app:fab_title="@string/folderActivity_folderArchiveFrag_pickFromGallery" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/diary_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/color_videoEditor_fab_button"
            app:fab_colorPressed="@color/color_videoEditor_fab_button_pressed"
            app:fab_icon="@drawable/ic_diary"
            app:fab_size="mini"
            app:fab_title="@string/folderActivity_folderArchiveFrag_diary" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        tools:text="主页"
        android:textAppearance="@style/Toolbar.TitleText"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
