<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    tools:context=".fragment.video_editor.VideoEditorGraffitiFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/video_editor_graffiti_nestedscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/video_editor_graffiti_text_graffiti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange_70"
                    android:padding="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="涂鸦"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/video_editor_graffiti_text_sticker_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="文字"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/video_editor_graffiti_text_sticker_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="贴图"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:focusable="true" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.xuanyuetech.tocoach.util.videoeditor.PaintSelectorPanel
                android:id="@+id/paint_selector_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <com.xuanyuetech.tocoach.util.videoeditor.TextSelectorPanel
                android:id="@+id/video_editor_text_selector_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <com.xuanyuetech.tocoach.util.videoeditor.ImageSelectorPanel
                android:id="@+id/video_editor_image_selector_panel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@android:color/background_dark"
                android:visibility="gone" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/container_rangeSeeker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="统一的特效时间段"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/video_editor_graffiti_indicator_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/video_editor_graffiti_indicator_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.jaygoo.widget.RangeSeekBar
                    android:id="@+id/video_editor_graffiti_range_seek_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rsb_mode="range"
                    app:rsb_indicator_background_color="#00000000"
                    app:rsb_indicator_padding_left="7dp"
                    app:rsb_indicator_padding_top="7dp"
                    app:rsb_indicator_arrow_size="0dp"
                    app:rsb_indicator_padding_bottom="-20dp"
                    app:rsb_progress_height="10dp"
                    app:rsb_progress_color="@color/color_videoEditor_progress_bar"
                    app:rsb_min_interval="@integer/rangeSeekBarMinInterval"
                    app:rsb_thumb_drawable="@drawable/range_bar_thumb_transparent"/>

                <Button
                    android:id="@+id/video_editor_graffiti_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@color/transparent"
                    android:textColor="@color/white"
                    android:paddingEnd="10dp"
                    android:drawablePadding="5dp"
                    android:paddingStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@drawable/ic_check"
                    android:drawableTint="@color/greenyellow"
                    android:text="完成修改" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>



</FrameLayout>