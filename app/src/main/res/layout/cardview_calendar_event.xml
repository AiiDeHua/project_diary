<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/container_item_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_event_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="70dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="13sp"
                android:text="12:00 下午"/>

            <TextView
                android:id="@+id/item_event_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:minWidth="70dp"
                android:textSize="13sp"
                android:text="2:00 下午"/>

        </LinearLayout>

        <View
            android:id="@+id/item_event_horizontal_line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorBlack_100"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13sp"
                android:lines="1"
                tools:text="第一堂课" />

            <TextView
                android:id="@+id/item_event_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="李明 富盛一 李红艳 二狗" />

        </LinearLayout>



    </LinearLayout>


</FrameLayout>